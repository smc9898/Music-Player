/* pages/paihang/paihang.wxss */
page{
  display: flex;
  flex-direction: column;
  background: #97483b;
  color: #000000;
  height: 100%;
}

.title{
  width: 100%;
  height: 300rpx;
  background: #97483b;
  margin-bottom: 40rpx;
  display: flex;
}
.titleImg{
  width: 250rpx;
  height: 250rpx;
  margin-top: 50rpx;
  margin-left: 50rpx;
  border-radius: 4%;
}
.text{
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
  margin-left: 35rpx;
  font-size: 35rpx;
}
.titleText{
  color: white;
}
.fubiaoti{
  margin-top: 35rpx;
  font-size: 30rpx;
  color: rgb(201, 200, 200);
}
.jianjie{
  margin-top: 35rpx;
  font-size: 25rpx;
  color: rgb(158, 158, 158);
}
.list{
  width: 100%;
  height: 100%;
  background: white;
  display: flex;
  flex-direction: column;
  border-radius: 5%;
}
.list-title{
  width: 100%;
  height: 100rpx;
  margin-top: 25rpx;
  margin-left: 50rpx;
}
.musicContainer{
  width: 100%;
  height: 150rpx;
  background: white;
  display: flex;
}
.left{
  width: 150rpx;
  height: 150rpx;
}

.left image{
  width: 140rpx;
  height: 140rpx;
  margin: 5rpx;
  border-radius: 8%;
}
.center{
  width: 450rpx;
  height: 150rpx;
  position: relative;
}

.songName{
  color: black;
  font-size: 42rpx;
  padding-left: 24rpx;
  margin-top: 10rpx; 
  width: 450rpx;
  height: 75rpx;
  line-height: 75rpx;
  overflow: hidden;
}

.singerName{
  color: rgb(136, 135, 135);
  font-size: 30rpx;
  padding-left: 24rpx;
  margin-top: -8rpx;
  width: 450rpx;
  height: 75rpx;
  line-height: 75rpx;
  overflow: hidden;
}
.right{
  width: 150rpx;
  height: 150rpx;
}

.right image{
  width: 120rpx;
  height: 120rpx;
  margin: 15rpx;
}