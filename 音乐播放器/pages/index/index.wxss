/* pages/demo1/demo1.wxss */
page{
  display: flex;
  flex-direction: column;
  background: #f2f4f5;
  color: #000000;
  height: 100%;
}
.tab{
  display: flex;
}
.tab-item{
  flex: 1;
  font-size: 10pt;
  text-align: center;
  line-height: 72rpx;
  border-bottom: 6rpx solid#eee;
}
.content{
  flex: 1;
}
.content>swiper{
  height: 100%;
}
.player{
  background: #222;
  border-top: 1px solid#252525;
  height: 112rpx;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.content-index{
  height: 100%;
}
.content-info-slide{
  height: 302rpx;
  margin-bottom: 1rpx;
}
.content-info-slide image{
  width: 100%;
  height: 100%;
}

image{
  width: 100%;
}
.content-index-portal{
  display: flex;
  margin-bottom: 10rpx ;

}
.content-index-portal>view{
  flex: 1;
  font-size: 11pt;
  text-align: center;
}
.content-index-portal image{
  width: 120rpx;
  height: 120rpx;
  display: block;
  margin: 20rpx auto;
}
.content-index-list{
  font-size: 11pt;
  margin-bottom: 20rpx;
}
.content-index-list>.list-title{
  margin: 20rpx 35rpx;
}
.content-index-list>.list-inner{
  display: flex;
  flex-wrap: wrap;
  margin: 0 20rpx;
}
.content-index-list>.list-inner>.list-item{
  flex: 1;
}
.content-index-list>.list-inner>.list-item>.navigator1{
  width: 200rpx;
  height: 200rpx;
}
.content-index-list>.list-inner>.list-item>image{
  display: block;
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
  border-radius: 10rpx;
  border: 1rpx solid#555;
}
.content-index-list>.list-inner>.list-item>view{
  width: 200rpx;
  margin: 10rpx auto;
  font-size: 10pt;
}
